<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema"
			xmlns:engine="http://alomo-engine.org/elements" targetNamespace="http://alomo-engine.org/elements">

	<xs:element name="ARGB">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:pattern value="\s*((((([01]?[0-9]?[0-9]|2[0-4][0-9]|25[0-5]),\s*){3}([01]?[0-9]?[0-9]|2[0-4][0-9]|25[0-5]))))"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>

	<xs:simpleType name="EngineBoolean">
		<xs:restriction base="xs:string">
			<xs:pattern value="\s*(([Tt][Rr][Uu][Ee]|[Ff][Aa][Ll][Ss][Ee])\s*)"/>
		</xs:restriction>
	</xs:simpleType>	

</xs:schema>